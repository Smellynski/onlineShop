{% extends 'basepages/baseShopPage.html.twig' %}

{% block body %}

<div class="container mt-4">

    <div class="row">
        {% for product in products %}
            <div class="col-md-4 mb-4">
                <a href="#" class="text-decoration-none text-dark"> <!-- Add your product link here -->
                    <div class="card h-100 border-0 shadow-sm">
                        <img src="{{product.imagePath}}" class="card-img-top" alt="{{ product.title }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.title }}</h5>
                            <p class="card-text">Price: {{ product.price }}</p>
                        </div>
                    </div>
                </a>
            </div>
            <!-- relative path-->
            <!--http://localhost:8002/#public/Media/optimized/meinProdukt.png-->
            {% if loop.index % 3 == 0 %}
                </div><div class="row">
            {% endif %}
        {% endfor %}
    </div>

</div>

{% endblock %}
